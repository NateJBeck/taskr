<h1>Your Tasks</h1>

<%= form_for @task do |form| %>
  <%= render "error_messages", target: @task %>

  <div>
    <%= form.label "Title" %>
    <%= form.text_field :title %>
  </div>

  </div>
    <%= form.label "Description" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit "Create Task"%>
  </div>
<% end %>

<ul>
  <%= render @tasks %>
</ul>
